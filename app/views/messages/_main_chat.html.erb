<div class = "chat-top">
  <div class="left-header">
    <div class="header-title">
      hogefuga
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class = "chat-center">
    <div class = "message">
         <div class = "upper-message">
            <div class = "message-name">TOm
            </div>
            <div class = "message-time">2021.05.23(sun)
            </div>
        </div>
        <div class = "lower-message">
            <div class = "message-text">おはよう
            </div>
        </div>
    </div>
     <div class = "message">
        <div class = "upper-message">
            <div class = "message-name">jaen
            </div>
            <div class = "message-time">2021.05.19(wed)
            </div>
        </div>
        <div class = "lower-message">
            <div class = "message-text">やあ
            </div>
        </div>
    </div>
</div>

<%= form_with model: [@room, @message], class: "chat-bottom", local: true do |f| %> 
    <div class="form-input">
        <%= f.text_field :content , class: "message-form", placeholder: "type a message" %>
        <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: "hidden" %>
        </label>
    </div>
    <%= f.submit "送信", class: "send" %>
<% end %>